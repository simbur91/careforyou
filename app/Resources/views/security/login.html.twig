{% extends 'base.html.twig' %}

{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="connexion center-block">
    <fieldset class="form-group center-block">
        <form action="{{ path('login') }}" method="post">
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input type="text" id="username" name="_username" class="form-control" placeholder="login" value="{{ last_username }}" required />
            </div>
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de Passe" required />
            </div>
            <div class="text-center">
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-log-in"></i>
                    <input type="submit" name="connect" class= "btn btn-success" value="Se connecter" id = "connectBtn"/></span>
                    <input type="hidden" name="_target_path" value ="account" />
                </div>
            </div>
        </form>
    </fieldset>
</div>
{% endblock %}