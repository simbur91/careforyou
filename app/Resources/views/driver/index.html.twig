{% extends 'base.html.twig' %}

{% block body %}
    <h1>Driver list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Place</th>
                <th>Modeleid</th>
                <th>Userid</th>
                <th>Idmarque</th>
                <th>Rayon</th>
                <th>Colorcar</th>
                <th>Notemoyenne</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for driver in drivers %}
            <tr>
                <td><a href="{{ path('driver_show', { 'id': driver.id }) }}">{{ driver.id }}</a></td>
                <td>{{ driver.place }}</td>
                <td>{{ driver.modeleId }}</td>
                <td>{{ driver.UserId }}</td>
                <td>{{ driver.IdMarque }}</td>
                <td>{{ driver.rayon }}</td>
                <td>{{ driver.colorCar }}</td>
                <td>{{ driver.noteMoyenne }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('driver_show', { 'id': driver.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('driver_edit', { 'id': driver.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('driver_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
